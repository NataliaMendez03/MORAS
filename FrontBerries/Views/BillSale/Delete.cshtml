@model FrontBerries.Models.BillSaleViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Delete";
}

<h1 style="color: black; font-family:'Trebuchet MS',sans-serif; font-weight:bold;">Delete</h1>

<h3 style="color: black; font-family:'Trebuchet MS',sans-serif; font-weight:bold;">Are you sure you want to delete this?</h3>
<div>
    <h4 style="color: black; font-family:'Trebuchet MS',sans-serif; font-weight:bold;">Bill Sale</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdBillSale)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdBillSale)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateSale)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateSale)
        </dd>
        <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Notes)
        </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Notes)
        </dd>
    </dl>

    <form asp-action="Delete">
        <div class="form-group mt-2">
            <input type="submit" value="Delete" class="btn" style="background-color: mediumpurple; color: white;" />
        </div>
        <div>
            <a asp-action="BillSaleGet" style="color: rebeccapurple;">Back</a>
        </div>
    </form>
</div>
