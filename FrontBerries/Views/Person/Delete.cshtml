@model FrontBerries.Models.PersonViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Delete";
}

<h1 style="color: black; font-family:'Trebuchet MS',sans-serif; font-weight:bold;">Delete</h1>

<h3 style="color: black; font-family:'Trebuchet MS',sans-serif; font-weight:bold;">Are you sure you want to delete this?</h3>
<div>
    <h4 style="color: black; font-family:'Trebuchet MS',sans-serif; font-weight:bold;">Contact</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdPerson)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdPerson)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LastName)
    </dl>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Phone)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Phone)
        </dl>
    <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
    </dt>
    <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dl>
    <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TypeIdentifications)
    </dt>
    <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TypeIdentifications)
        </dl>
    <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.NumberIdentification)
    </dt>
    <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NumberIdentification)
        </dl>


    <form asp-action="Delete">
        <div class="form-group mt-2">
            <input type="submit" value="Delete" class="btn" style="background-color: mediumpurple; color: white;" />
        </div>
        <div>
            <a asp-action="ContactGet" style="color: rebeccapurple;">Back</a>
        </div>
    </form>
</div>
