@model FrontBerries.ViewModels.UsuarioVM;
@{
    Layout = null;
}

<html>
    <head>
        <title>Registro</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    </head>
    <body>
    <div class="image-container">
        <img src="~/src/moralipsislogo.png" width="150" height="150" />
        <img src="~/src/picture1.png" align="right" width="150" height="150" />
    </div>
        <div class="row mt-5 justify-content-center">
            <div class="col-sm-4">
                <div class="card">
                <div class="card-header  text-center">
                    <h1 style="color: mediumpurple; font-family:'Trebuchet MS',sans-serif; font-weight:bold;">Create your Account</h1>
                </div>
                    <div class="card-body">
                        <div class="d-grid gap-2 mb-3">
                        <style="color: black;" align="center">to continue Moralipsis</>
                    </div>
                        <form asp-controller="Acceso" asp-action="Registro" method="post">
                            <input class="form-control mb-3" type="text" placeholder="User Name" required asp-for="UserName" />
                            <input class="form-control mb-3" type="text" placeholder="Email" required asp-for="Email" />
                            <input class="form-control mb-3" type="password" placeholder="Password" required asp-for="Password" />
                            <input class="form-control mb-3" type="password" placeholder="Confirm Password" Contraseña required asp-for="ConfirmPassword" />
                            <div class="d-grid gap-2 mb-3">
                                 <button style="background-color: mediumpurple; color: white;">Create Account</button>
                            </div>
                        
                            @if (ViewData["Mensaje"]!=null)
                            {
                                <div class="alert alert-danger" role ="alert">
                                  @ViewData["Mensaje"]
                                 </div>   
                            }
                            Moralipsis  <a asp-controller="Acceso" asp-action="Login" style="color: rebeccapurple;"> Sign In </a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    




    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
