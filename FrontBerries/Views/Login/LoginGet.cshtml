@model IEnumerable<FrontBerries.Models.LoginViewModel>

@{
    ViewData["Title"] = "Users";
}

<h1 style="color: black; font-family:'Trebuchet MS',sans-serif; font-weight:bold;">Users</h1>

<p>
    <a asp-action="Create" style="color: rebeccapurple;">Create New</a>
</p>
<table class="table" style="color: black;">
    <thead style="color: black; background-color: lightgray;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdLogin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegisterDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdLogin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegisterDate)
            </td>
            <td>
                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }, new { style = "color: rebeccapurple;" }) |
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }, new { style = "color: rebeccapurple;" }) |
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ }, new { style = "color: rebeccapurple;" })
            </td>
        </tr>
}
    </tbody>
</table>
