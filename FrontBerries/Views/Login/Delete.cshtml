@model FrontBerries.Models.LoginViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Delete";
}

<h1 style="color: black; font-family:'Trebuchet MS',sans-serif; font-weight:bold;">Delete</h1>

<h3 style="color: black; font-family:'Trebuchet MS',sans-serif; font-weight:bold;">Are you sure you want to delete this?</h3>
<div>
    <h4 style="color: black; font-family:'Trebuchet MS',sans-serif; font-weight:bold;">Game User</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdLogin)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdLogin)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserName)

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RegisterDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RegisterDate)
        </dd>

    </dl>
    
    <form asp-action="Delete">
        <div class="form-group mt-2">
        <input type="submit" value="Delete" class="btn" style="background-color: mediumpurple; color: white;"/> 
        </div>
        <div>
            <a asp-action="LoginGet" style="color: rebeccapurple;">Back</a>
        </div>
    </form>
</div>
